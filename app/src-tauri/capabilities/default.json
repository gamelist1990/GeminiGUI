{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-resource-read",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
  "fs:allow-mkdir",
  "fs:allow-write-text-file",
  "fs:allow-write-file",
  "fs:allow-write",
    "fs:scope-document-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/.gemini" },
        { "path": "$HOME/.gemini/*" },
        { "path": "$HOME/.gemini/**" },
        { "path": "$DOWNLOAD/*" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/*" },
        { "path": "$DESKTOP/**" }
      ]
    },
    "notification:default",
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
         {
          "name": "powershell.exe",
          "cmd": "powershell.exe",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "os:default",
    "shell:default",
    "dialog:default"
  ]
}
