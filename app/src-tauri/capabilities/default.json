{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "http:allow-fetch",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://localhost:*" },
        { "url": "https://*" },
        { "url": "http://*" }
      ]
    },
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-resource-read",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-write",
    "fs:allow-copy-file",
    "fs:scope-document-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "*" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" },
        { "path": "$HOME/.gemini" },
        { "path": "$HOME/.gemini/*" },
        { "path": "$HOME/.gemini/**" },
        { "path": "$DOWNLOAD/*" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/*" },
        { "path": "$DESKTOP/**" },
        { "path": "$RESOURCE" },
        { "path": "$RESOURCE/*" },
        { "path": "$RESOURCE/**" },
        { "path": "$TEMP" },
        { "path": "$TEMP/*" },
        { "path": "$TEMP/**" },
        { "path": "$APPDATA" },
        { "path": "$APPDATA/*" },
        { "path": "$APPDATA/**" }
      ]
    },
    "notification:default",
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "curl",
          "cmd": "curl",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell.exe",
          "cmd": "powershell.exe",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "os:default",
    "shell:default",
    "dialog:default"
  ]
}
