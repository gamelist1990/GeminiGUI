{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-resource-read",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:scope-document-recursive",
    "notification:default",
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
         {
          "name": "powershell.exe",
          "cmd": "powershell.exe",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "os:default",
    "shell:default",
    "dialog:default"
  ]
}
